# RAG Backend Production Environment Variables
# Copy this file to .env and fill in your values

# Database Configuration
POSTGRES_DB=rag_backend
POSTGRES_USER=rag_user
POSTGRES_PASSWORD=your_secure_postgres_password_here

# Redis Configuration
REDIS_PASSWORD=your_secure_redis_password_here

# MinIO Configuration
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=your_secure_minio_password_here
MINIO_BUCKET=rag-storage
MINIO_BROWSER_REDIRECT_URL=https://your-domain.com/minio

# JWT Configuration
JWT_SECRET=your_very_long_and_secure_jwt_secret_key_here_at_least_32_characters

# Tenant Configuration
TENANT_ID=00000000-0000-0000-0000-000000000000
TENANT_NAME=Default Tenant
TENANT_CONTACT_EMAIL=admin@your-domain.com
TENANT_CODE=DEFAULT
TENANT_SLUG=default

# Admin User Configuration
ADMIN_EMAIL=admin@your-domain.com
ADMIN_PASSWORD=your_secure_admin_password_here
ADMIN_NAME=System Administrator

# Frontend URLs
NEXT_PUBLIC_API_URL=https://your-domain.com/api
NEXT_PUBLIC_BACKEND_URL=https://your-domain.com
RAG_BASE_URL=https://your-domain.com

# Optional: Telemetry
NEXT_TELEMETRY_DISABLED=1

# Optional: Security Monitoring (if you want alerts)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK