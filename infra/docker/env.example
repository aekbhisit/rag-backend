# Production Environment Variables
# Copy this file to .env and fill in your actual values

# Database Configuration
POSTGRES_DB=rag_assistant
POSTGRES_USER=rag_user
POSTGRES_PASSWORD=your_secure_password_here

# External Database Access (for database tools, monitoring, etc.)
# PostgreSQL: rag.haahii.com:5432
# Redis: rag.haahii.com:6379
# MinIO Console: rag.haahii.com:9001
POSTGRES_INITDB_ARGS=--encoding=UTF-8 --lc-collate=C --lc-ctype=C

# Redis Configuration
REDIS_PASSWORD=your_redis_password_here

# MinIO Configuration (aligns with backend adapters)
MINIO_ROOT_USER=your_minio_access_key
MINIO_ROOT_PASSWORD=your_minio_secret_key
MINIO_BUCKET=rag-assistant
MINIO_ENDPOINT=minio
MINIO_PORT=9000
MINIO_BROWSER_REDIRECT_URL=https://your-domain.com

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here

# AI Provider API Keys (stored in database per tenant)
# These are configured through the admin panel for each tenant
# No need to set them here as environment variables

# Backup Configuration
BACKUP_RETENTION_DAYS=7

# Application Configuration
NODE_ENV=production
PORT=3001

# Admin Web Configuration
ADMIN_WEB_PORT=3000
# Use relative URLs for same-domain API calls (recommended)
NEXT_PUBLIC_API_URL=/api
NEXT_PUBLIC_BACKEND_URL=
NEXT_TELEMETRY_DISABLED=1
DOMAIN=rag.haahii.com

# Optional: SSL Configuration
SSL_CERT_FILE=/etc/nginx/ssl/cert.pem
SSL_KEY_FILE=/etc/nginx/ssl/key.pem

# Optional: Bootstrap a default tenant and admin (idempotent)
# If provided, the container will ensure a tenant and admin user exist
TENANT_ID=acc44cdb-8da5-4226-9569-1233a39f564f
TENANT_NAME=Default Tenant
TENANT_CONTACT_EMAIL=admin@example.com
TENANT_CODE=
TENANT_SLUG=
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=ChangeMe!
ADMIN_NAME=Admin
